<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>

    <property resource="application.properties" />

    <springProfile name="local">
        <property resource="application-local.properties" />
    </springProfile>

    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />

    <property name="LOG_PATTERN_VAR"
              value="${LOGGING_PATTERN_CONSOLE:-%clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd'T'HH:mm:ss.SSS}}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(%-40.40logger{39}){cyan} %clr(%mdc{correlationId:-}){magenta} %clr(%mdc{ALIAS_BASE:-}){magenta} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%clr(%wEx){red}}}}" />

    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder charset="UTF-8" class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <pattern>${LOG_PATTERN_VAR}</pattern>
            </layout>
        </encoder>
    </appender>

    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook">
        <sleepMillis>3000</sleepMillis>
    </shutdownHook>

    <!-- LOG everything at INFO level -->
    <root level="${logback.root.log.level:-INFO}">
        <appender-ref ref="Console" />
    </root>

    <!-- LOG "com.culysoft*" at DEBUG level -->
    <logger name="com.culysoft" level="${logback.log.level:-INFO}" additivity="false">
        <appender-ref ref="Console" />
    </logger>


</configuration>
